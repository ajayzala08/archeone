                    *@

                    <div class="col-sm-4" id="dtxtPolicyFile">
                        <div class="form-group">
                            <input id="txtPolicyId" name="txtPolicyId" type="hidden" class="form-control" value="@Model.Id" />
                            @if (Model.Id > 0)
                            {
                                <label for="form_name">Policy File *</label>
                                <link src="/@Model.PolicyDocumentName" id="policyFile" style="width:75px!important" name="policyFile" />
                            }
                            else
                            {
                                <label for="form_name">Policy File *</label>
                                <link src="@Model.PolicyDocumentName" id="policyFile" style="width:75px!important" name="policyFile" />
                            }
                            <div class="input-group">
                                <div class="custom-file">
                                    <input id="txtPolicyFile" type="file" name="txtPhotoUrl" value="@Model.PolicyDocumentName" isrequired="0" divcontainer="dtxtPolicyFile" errorspan="stxtPolicyFile" defaultvalue="" autocomplete="off" class="custom-file-input" onchange="loadFile(event)" accept="file/*" />
                                    <label class="custom-file-label" for="form_file">Choose file</label>
                                </div>
                            </div>
                        </div>
                        <span class="help-block d-none has-error" id="stxtPolicyFile">Please select any file</span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-1">
                        <button type="button" id="btnSaveAdd" name="btnSubmit" class="btn btn-success">Submit</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" id="btnCancel" name="btnCancel" class="btn btn-danger">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/archeone/js/policy/addeditpolicy.js?_@DateTime.Now.Ticks"></script>
}