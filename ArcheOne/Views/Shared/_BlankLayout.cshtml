    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
    window.history.forward();
    function noBack() {
    window.history.forward();
    }
    </script>*@
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
