                        <ul class="nav nav-treeview">
                            @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Daily_Tasks_View.ToString()))
                            {
                                <li class="nav-item">
                                    <a href="~/Task/Task" class="nav-link">
                                        <i class="fa fa-table nav-icon"></i>
                                        <p>Daily Tasks</p>
                                    </a>
                                </li>
                            }
                            @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Projects_View.ToString()))
                            {
                                <li class="nav-item">
                                    <a href="~/Project/Project" class="nav-link">
                                        <i class="fa fa-project-diagram nav-icon"></i>
                                        <p>Projects</p>
                                    </a>
