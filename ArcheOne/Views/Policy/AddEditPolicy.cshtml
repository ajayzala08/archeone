@using ArcheOne.Helper.CommonModels;
@using ArcheOne.Models.Req;
@model AddEditPolicyReqModel

@{
    Layout = "_MasterLayout";
}

<section class="content-header"></section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-header">
                Create Policy
                <h3 class="card-title"></h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <input id="txtPolicyId" name="txtPolicyId" type="hidden" class="form-control col-sm-4" value="@Model.Id" />

                    <div class="col-sm-4" id="dtxtPolicyName">
                        <div class="form-group">
                            <label for="form_name">Policy Name *</label>
                            <input id="txtPolicyName" type="text" name="PolicyName" class="form-control text-length datepicker" placeholder="Please enter your PolicyName" value="@Model.PolicyName" isrequired="1" divcontainer="dtxtPolicyName" errorspan="stxtPolicyName" defaultvalue="" autocomplete="off" minlength="2">
                            <span class="help-block d-none has-error" id="stxtPolicyName">Please Enter Valid PolicyName</span>
                        </div>
                    </div>

                    @*  <div class="col-sm-4" id="dtxtPolicyFile">
