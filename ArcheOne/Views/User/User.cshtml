@using ArcheOne.Models.Req;
@model UserAddEditReqViewModel;
@{
    Layout = "_MasterLayout";
    ViewBag.datatable = "true";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Master</a></li>
                    <li class="breadcrumb-item active">User</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card">
        <input type="hidden" id="userId" value="@Model" />

        <div class="card-header d-flex p-0">
            <h3 class="card-title p-3">User List</h3>
            <div class="card-tools ml-auto mr-2 p-2 justify-content-end">

                <input type="button" id="btnUploadExcel" class="btn btn-primary mr-2 float-left" data-toggle="modal" data-target="#modalExcelUpload" value="Upload Excel" />
                <button type="button" id="btnAddUser" class="btn btn-primary float-right">Add User</button>

            </div>
            @*  <div class="card-tools ml-auto mr-2 p-2">
            <input type="button" id="btnUploadExcel" class="btn btn-primary float-right" data-toggle="modal" data-target="#modalExcelUpload" value="Upload Excel" />
            <button type="button" id="btnAddUser" class="btn btn-primary float-right">Add User</button>
            </div>*@
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table id="tblUser" class="table table-bordered table-striped" style="width:100%"></table>
                </div>
            </div>
            @* <div id="divUserList"> </div> *@
            <div id="AddUserForm">
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalExcelUpload">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Upload User Sheet</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="UploadUserclose">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12" id="modelUpload">
                        <div class="col-sm-12 mb-3">
                            <i class="fas fa-download text-primary"></i><a href="~/theme/files/user.xlsx"> Download Sample User Excel</a>
                        </div>
                        <div class="form-group" id="dfileUserSheet">
                            <label><span class="has-error required">* </span>User Sheet</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input id="fileUserSheet" type="file" name="fileUserSheet" isrequired="1" divcontainer="dfileUserSheet" errorspan="sfileUserSheet" defaultvalue="" autocomplete="off" class="custom-file-input" onchange="UserloadFile(event)" accept=".xls, .xlsx" />
                                    <label id="lblUserSheet" class="custom-file-label">Choose file</label>
                                </div>
                            </div>
                            <span class="help-block d-none has-error" id="sfileUserSheet">Please select excel sheet only.</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="btnUploadUserSheet" name="btnUploadUserSheet" class="btn btn-warning float-right" value="Upload" />
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <!-- /.card -->
</section>

@section Scripts{
    <script src="~/archeone/js/user/user.js"></script>
}


