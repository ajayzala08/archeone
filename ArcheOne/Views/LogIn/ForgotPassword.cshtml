@{
    Layout = "_BlankLayout";
}
<div class="hold-transition login-page">
<div class="card" style="margin-bottom:100px">
    <div class="card-body login-card-body">
        <h4>Forgot Password? 🔒</h4>
        <p>Enter your email and we'll send you instructions to reset your password</p>
        @*<form class="mb-3" asp-controller="LogIn" asp-action="ForgotPassword" method="POST">*@
      
            <div class="form-outline mb-4" id="dtxtEmail">
                <label class="form-label"><span class="has-error required">*</span>Email</label>
                <input id="txtEmail" name="Email" type="email" class="form-control text-length" placeholder="Email" isRequired="1" divcontainer="dtxtEmail" errorspan="stxtEmail" defaultvalue="" autocomplete="off" minlength="1"/>
                <span class="help-block d-none has-error" id="stxtEmail">Please Enter Valid Email</span>
            </div>

        <button type="button" id="btnForgotPassword" name="btnForgotPassword" class="btn btn-primary d-grid w-100">Send Reset Link</button>
        @*</form>*@
        <div class="text-center">
            <a href="~/LogIn/LogIn" class="d-flex align-items-center justify-content-center">
                <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                Back to login
            </a>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <script src="~/Archeone/js/login/Login.js"></script>
    <script src="https://malsup.github.io/jquery.blockUI.js"></script>
}