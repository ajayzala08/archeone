                with font-awesome or any other icon font library -->
                @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Dashboard_View.ToString()))
                {
                    <li class="nav-item">
                        <a href="~/Dashboard/Index" class="nav-link"><i class="nav-icon fas fa-tachometer-alt"></i><p>Dashboard</p></a>
                    </li>
                }

                @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Event_View.ToString()))
                {
                    <li class="nav-item">
                        <a href="~/Event/Event" class="nav-link">
                            <i class="nav-icon fas fa-calendar-alt"></i><p>Events</p>
                        </a>
                    </li>
                }

