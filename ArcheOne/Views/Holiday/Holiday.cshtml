@{
    ViewBag.datatable = "true";
    ViewBag.boostrapdataload = "true";
    Layout = "_MasterLayout";
    //int id = 0;
}
@model bool;

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Holiday</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Masters</a></li>
                    <li class="breadcrumb-item active">Holiday</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Holiday List</h3>
            @if (Model)
            {
                <input type="button" id="AddHoliday" class="btn btn-primary float-right" value="Add Holiday" />
            }
        </div>
        <div class="card-body">
            <div id="divHolidayList">
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/archeone/js/holiday/holiday.js?_@DateTime.Now.Ticks"></script>
}

