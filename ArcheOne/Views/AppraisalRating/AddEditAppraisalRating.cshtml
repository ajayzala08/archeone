}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Appraisal Rating</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">HR</a></li>
                    <li class="breadcrumb-item active">Appraisal</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <input id="txtAppraisalId" name="txtAppraisalId" type="hidden" class="form-control col-sm-4" value="@Model.Id" />

                <div class="col-sm-4" id="dddlEmployeeId">
                    <div class="form-group">
                        <label><span class="has-error required">* </span>Employee Name</label>
                        <select id="ddlEmployeeId" name="ddlEmployeeId" class="form-control" isrequired="1" divcontainer="dddlEmployeeId" errorspan="sddlEmployeeId" defaultvalue="0" style="width: 100%;">
                            <option value="0">--- Select ---</option>
                            @foreach (var item in Model.EmployeeId)
                            {
                                if (item.Id == Model.reportingManagetDetail.EmployeeDetail.EmployeeId)
                                {
                                    <option value="@item.Id" selected>@item.FirstName @item.LastName</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.FirstName @item.LastName</option>
                                }
                            }

                        </select>
                        <span class="help-block d-none has-error" id="sddlEmployeeId">Please select any Employee</span>
                    </div>
                </div>

                <div class="col-sm-4" id="dddlReportingManagerId">
                    <div class="form-group">
                        <label><span class="has-error required">* </span>Reporting Manager</label>
                        <select id="ddlReportingManagerId" name="ddlReportingManagerId" class="form-control" isrequired="1" divcontainer="dddlReportingManagerId" errorspan="sddlReportingManagerId" defaultvalue="0" style="width: 100%;">
