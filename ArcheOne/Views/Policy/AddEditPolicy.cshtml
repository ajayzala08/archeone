@using ArcheOne.Helper.CommonModels;
@using ArcheOne.Models.Req;
@model AddEditPolicyReqModel

@{
    Layout = "_MasterLayout";
    var Title = Model.Id > 0 ? "Edit Policy" : "Create Policy";
}

<section class="content-header"></section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-header">
                @Title
                <h3 class="card-title"></h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row" id="divUploadFile">
                    <input id="txtPolicyId" name="txtPolicyId" type="hidden" class="form-control col-sm-4" value="@Model.Id" />
                    <div class="col-sm-4" id="dtxtPolicyName">
                        <div class="form-group">
                            <label class="form-label"><span class="has-error required">* </span>Policy Name</label>
                            <input id="txtPolicyName" type="text" name="PolicyName" class="form-control text-length" placeholder="Please enter your HolidayName" value="@Model.PolicyName" isrequired="1" divcontainer="dtxtPolicyName" errorspan="stxtPolicyName" defaultvalue="" autocomplete="off" minlength="2">
                            <span class="help-block d-none has-error" id="stxtPolicyName">Please Enter Valid PolicyName</span>
                        </div>
                    </div>

                    <div class="col-sm-4" id="dtxtPolicyFile">
                        <div class="form-group">
                            <label class="form-label"><span class="has-error required">* </span>Policy Docuemnt(.pdf)</label>
                            <input id="txtPolicyFile" type="file" name="PolicyFile" class="form-control text-length" placeholder="Please Select Valid File" value="@Model.PolicyDocumentName" isrequired="1" divcontainer="dtxtPolicyFile" errorspan="stxtPolicyFile" defaultvalue="" autocomplete="off" onchange="loadFile(event)" accept="file/*" />
                            <span class="help-block d-none has-error" id="stxtPolicyFile">Please Select Valid File</span>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card-footer">
                <div class="row mr-lg-n3 float-right">
                    @if (Title == "Edit Policy")
                    {
                        <button type="button" id="btnSaveAdd" name="btnSubmit" class="btn btn-success mr-2">Update</button>
                    }
                    else
                    {
                        <button type="button" id="btnSaveAdd" name="btnCancel" class="btn btn-success mr-2">Submit</button>
                    }
                    <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger float-right">Cancel</button>
                </div>
            </div>


        </div>
    </div>
</section>

@section Scripts {
    <script src="~/archeone/js/policy/addeditpolicy.js?_@DateTime.Now.Ticks"></script>
}