                            {
                                if (item.Id == Model.reportingManagetDetail.ReportingManagerId)
                                {
                                    <option value="@item.Id" selected>@item.FirstName @item.LastName</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.FirstName @item.LastName</option>
                                }
                            }

                        </select>
                        <span class="help-block d-none has-error" id="sddlReportingManagerId">Please select any Reporting Manager</span>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="row">
                        <div class="form-group col-sm-12" id="dtxtDate">
                            <label><span class="has-error required">* </span>Date</label>
