@using ArcheOne.Models.Res;
@model AppraisalResModel
@{
    Layout = "_MasterLayout";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Appraisal</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">HR</a></li>
                    <li class="breadcrumb-item active">Appraisal</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            @if (Model.IsUserHR == true)
            {
                <div class="col-md-3 float-left">
                    <label>Appraisal Status</label>
                    <select id="ddlAppraisalStatus" name="ddlAppraisalStatus" class="form-control data-filter select2 ">
                        <option value="1">InProgress</option>
                        <option value="2">Completed</option>
                    </select>
                </div>

                <input type="button" id="AddAppraisal" class="btn btn-primary float-right" value="Add Appraisal" />
            }

        </div>
        <div class="card-body">
            <div id="divAppraisalList">
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/archeone/js/appraisal/appraisal.js?_@DateTime.Now.Ticks"></script>
}


