@using ArcheOne.Models.Req;
@inject IHttpContextAccessor HttpContextAccessor
@model UserAddEditReqViewModel;
@{
	//Layout = "_BlankLayout";
	//string PopupTitle1 = "";
	//PopupTitle1 = Model.UserDetails.Id > 0 ? "Edit User" : "Add User";
}

<section class="content-header"></section>
<section class="content">
	<div class="container-fluid">
		<div class="card card-outline card-primary">
			<div class="card-header">
				Create Users
				<h3 class="card-title"></h3>
				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse">
						<i class="fas fa-minus"></i>
					</button>
				</div>
			</div>
			<div class="card-body">
				<form id="contact-form" method="post" role="form" enctype="multipart/form-data">
					<div class="messages"></div>
					<div class="controls">
						<div class="row">
							<div class="col-sm-4" id="dtxtPhotoUrl">
								<div class="form-group">
									<div class="form-group">
										<input id="txtUserId" name="txtUserId" type="hidden" class="form-control" value="@Model.UserDetails.Id" />

										<label for="form_name">Photo *</label>
										<input type="file" id="photoUpload" onchange="uploadFiles('photoUpload');" />
										<img src="@Model.UserDetails.PhotoUrl" id="photoUrl" style="width:75px!important" name="photoUrl" />
										<div class="input-group">
											<div class="custom-file">
												<input id="txtPhotoUrl" type="file" name="txtPhotoUrl" value="@Model.UserDetails.PhotoUrl" isrequired="1" divcontainer="dtxtPhotoUrl" errorspan="stxtPhotoUrl" defaultvalue="" autocomplete="off" minlength="2" class="custom-file-input text-length" onchange="loadFile(event)" accept="image/*" />
												<label class="custom-file-label" for="form_file">Choose file</label>
											</div>
										</div>
									</div>
									<span class="help-block d-none has-error" id="stxtPhotoUrl">Please select any file</span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-4" id="dddlCompany">
								<div class="form-group">
									<label><span class="has-error required">* </span>Company</label>
									<select id="ddlCompany" name="ddlCompany" class="form-control" isrequired="1" divcontainer="dddlCompany" errorspan="sddlCompany" defaultvalue="0" style="width: 100%;">
										@*<option value="0">--- Select ---</option>*@
										@foreach (var item in Model.CompanyList)
										{
											<option value="@item.Id">@item.CompanyName</option>
										}
									</select>
									<span class="help-block d-none has-error" id="sddlCompany">Please select any company</span>
								</div>
							</div>
							@*<div class="col-sm-4" id="dddlRole">
							<div class="form-group">
							@Html.Label("Role")
							@Html.DropDownList("ddlRole", new SelectList(@ViewBag.Role, "Id", "RoleName"), htmlAttributes: new { @class = "form-control", @id = "ddlRole", @isrequired="1", @divcontainer="dddlRole", @defaultvalue="0", @errorspan="sddlRole" })
							<span class="help-block d-none has-error" id="sddlRole">Please Enter Valid Role</span>
							</div>
							</div>*@
							<div class="col-sm-4" id="dddlRole">
								<div class="form-group">
									<label><span class="has-error required">* </span>Role</label>
									<select id="ddlRole" name="ddlRole" class="form-control" isrequired="1" divcontainer="dddlRole" errorspan="sddlRole" defaultvalue="0" style="width: 100%;">
										@*<option value="0">--- Select ---</option>*@
										@foreach (var item in Model.RoleList)
										{
											<option value="@item.Id">@item.RoleName</option>
										}
									</select>
									<span class="help-block d-none has-error" id="sddlRole">Please select any role</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtFirstName">
								<div class="form-group">
									<label for="form_name">FirstName *</label>
									<input id="txtFirstName" type="text" name="FirstName" class="form-control text-length" placeholder="Please enter your firstname" value="@Model.UserDetails.FirstName" isrequired="1" divcontainer="dtxtFirstName" errorspan="stxtFirstName" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtFirstName">Please Enter Valid FirstName</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtMiddleName">
								<div class="form-group">
									<label for="form_name">MiddleName *</label>
									<input id="txtMiddleName" type="text" name="MiddleName" class="form-control text-length" placeholder="Please enter your MiddleName *" value="@Model.UserDetails.MiddleName" isrequired="1" divcontainer="dtxtMiddleName" errorspan="stxtMiddleName" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtMiddleName">Please Enter Valid MiddleName</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtLastName">
								<div class="form-group">
									<label for="form_name">LastName *</label>
									<input id="txtLastName" type="text" name="LastName" class="form-control text-length" placeholder="Please enter your LastName *" autocomplete="off" value="@Model.UserDetails.LastName" isrequired="1" divcontainer="dtxtLastName" errorspan="stxtLastName" defaultvalue="" minlength="2">
									<span class="help-block d-none has-error" id="stxtLastName">Please Enter Valid LastName</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtUserName">
								<div class="form-group">
									<label for="form_name">UserName *</label>
									<input id="txtUserName" type="text" name="UserName" class="form-control text-length" placeholder="Please enter your UserName *" value="@Model.UserDetails.UserName" isrequired="1" divcontainer="dtxtUserName" errorspan="stxtUserName" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtUserName">Please Enter Valid UserName</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtPassword">
								<div class="form-group">
									<label for="form_name">Password *</label>
									<input id="txtPassword" type="password" name="Password" class="form-control text-length" placeholder="Please enter your Password *" value="@Model.UserDetails.Password" isrequired="1" divcontainer="dtxtPassword" errorspan="stxtPassword" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtPassword">Please Enter Valid Password</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtAddress">
								<div class="form-group">
									<label for="form_name">Address *</label>
									<input id="txtAddress" type="text" name="Address" class="form-control text-length" placeholder="Please enter your Address *" value="@Model.UserDetails.Address" isrequired="1" divcontainer="dtxtAddress" errorspan="stxtAddress" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtAddress">Please Enter Valid Address</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtPincode">
								<div class="form-group">
									<label for="form_name">Pincode *</label>
									<input id="txtPincode" type="text" name="Pincode" class="form-control text-length" placeholder="Please enter your Pincode *" value="@Model.UserDetails.Pincode" isrequired="1" divcontainer="dtxtPincode" errorspan="stxtPincode" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtPincode">Please Enter Valid Pincode</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtMobile1">
								<div class="form-group">
									<label for="form_mobile1">Mobile1 *</label>
									<input id="txtMobile1" type="tel" name="Mobile1" class="form-control text-length" placeholder="Please enter your Mobile1 number" value="@Model.UserDetails.Mobile1" isrequired="1" divcontainer="dtxtMobile1" errorspan="stxtMobile1" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtMobile1">Please Enter Valid Mobile1</span>
								</div>
							</div>
							@*<div class="col-sm-4" id="dtxtMobile2">
							<div class="form-group">
							<label for="form_mobile1">Mobile2 *</label>
							<input id="txtMobile2" type="tel" name="Mobile2" class="form-control text-length" placeholder="Please enter your Mobile2 number" isrequired="1" divcontainer="dtxtMobile2" errorspan="stxtMobile2" defaultvalue="" autocomplete="off" minlength="2">
							<span class="help-block d-none has-error" id="stxtMobile2" asp-validation-for="Mobile2">Please Enter Valid Mobile2</span>
							</div>
							</div>*@
							<div class="col-sm-4">
								<div class="form-group">
									<label for="form_mobile1">Mobile2 *</label>
									<input id="txtMobile2" type="tel" name="Mobile2" class="form-control text-length" placeholder="Please enter your Mobile2 number" value="@Model.UserDetails.Mobile2" isrequired="1" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error">Please Enter Valid Mobile2</span>
								</div>
							</div>
							<div class="col-sm-4" id="dtxtEmail">
								<div class="form-group">
									<label for="form_email">Email *</label>
									<input id="txtEmail" type="email" name="Email" class="form-control text-length" placeholder="Please enter your Email *" value="@Model.UserDetails.Email" isrequired="1" divcontainer="dtxtEmail" errorspan="stxtEmail" defaultvalue="" autocomplete="off" minlength="2">
									<span class="help-block d-none has-error" id="stxtEmail">Please Enter Valid Email</span>
								</div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="row">
						<div class="col-md-1">
							<button type="button" id="btnSubmit" name="btnSubmit" class="btn btn-success">Submit</button>
						</div>
						<div class="col-md-1">
							<input type="submit" class="btn btn-danger btn-send" value="Cancel">
						</div>
					</div>
					@if (ViewBag.Message != null)
					{
						<script type="text/javascript">
							window.onload = function () {
								alert("@ViewBag.Message");
							};
						</script>
					}
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script src="~/archeone/js/user/user.js"></script>
}