                                        <i class="nav-icon fa fa-file-alt"></i>
                                        <p>User Document</p>
                                    </a>
                                </li>
                            }

                            @if (permissionList.Any(x
                           => x.PermissionCode == CommonEnums.PermissionMst.Default_Permissions_View.ToString()
                           || x.PermissionCode == CommonEnums.PermissionMst.User_Permissions_View.ToString()))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fa fa-lock"></i>
                                        <p>
                                            Permissions
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Default_Permissions_View.ToString()))
                                        {
                                            <li class="nav-item">
