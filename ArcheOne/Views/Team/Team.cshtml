@{
    ViewBag.boostrapdataload = "true";
    Layout = "_MasterLayout";
}
@model bool

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Teams</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Masters</a></li>
                    <li class="breadcrumb-item active">Teams</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Team List</h3>
            @if (@Model)
            {
                <input type="button" id="AddTeamPage" class="btn btn-primary float-right" value="Add Team" />
            }
        </div>
        <div class="card-body">
            <div id="divTeamList">
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/archeone/js/team/team.js?_@DateTime.Now.Ticks"></script>
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <script src="~/theme/plugins/bootstrap/js/bootstrap.min.js"></script>
}

<link href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.css' rel='stylesheet'>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>