               => x.PermissionCode == CommonEnums.PermissionMst.Users_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.User_Document_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.Default_Permissions_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.Default_Permissions_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.User_Permissions_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.Teams_View.ToString()
               || x.PermissionCode == CommonEnums.PermissionMst.Holidays_View.ToString()))
                {
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fa fa-toolbox"></i>
                            <p>
                                Masters
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.Users_View.ToString()))
                            {
                                <li class="nav-item">
                                    <a href="~/User/User" class="nav-link">
                                        <i class="nav-icon fa fa-user"></i>
                                        <p>Users</p>
                                    </a>
                                </li>
                            }

                            @if (permissionList.Any(x => x.PermissionCode == CommonEnums.PermissionMst.User_Document_View.ToString()))
