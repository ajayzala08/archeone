@using ArcheOne.Helper.CommonModels;
@using ArcheOne.Models.Res;
@model CommonResponse
@{
    Layout = "_BlankLayout";
    ViewBag.dataTable = "true";
}
<style>
    td {
        text-align: center;
    }

    thead {
        font-weight: bold;
    }
</style>
<div class="row form-group">
    <div class="col-md-12">
        @if (Model.Status)
        {
            List<RequirementListModel> list = Model.Data.RequirementList;
            <table id="tblRequirement" class="table table-responsive table-bordered table-hover" style="width:100%;">
                <thead>
                    <tr>
                        <td>Actions</td>
                        <td>Status</td>
                        <td>Id</td>
                        <td>Job Code</td>
                        <td>Main Skills</td>
                        <td>Mandatory Skills</td>
                        <td>Total Min Experience</td>
                        <td>Total Max Experience</td>
                        <td>Relevant Min Experience</td>
                        <td>Relevant Max Experience</td>
                        <td>No Of Position</td>
                        <td>Location</td>
                        <td>Job Description</td>
                        <td>End Client</td>
                        <td>POC Name</td>
                        <td>Client Bill Rate</td>
                        <td>Candidate Pay Rate</td>
                        <td>Requirement Status</td>
                        <td>Is Active</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in list)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-pen pen btn-edit" RequirementId="@item.RequirementId" style="cursor: pointer;"></i> &nbsp; | &nbsp;
                                <i class="fa fa-trash trash btn-delete" RequirementId="@item.RequirementId" style="cursor: pointer;"></i>
                            </td>
                            <td>
                                <select id="ddlRequirementStatus" name="ddlRequirementStatus" class="form-control select2" isRequired="1" divcontainer="dddlRequirementStatus" errorspan="sddlRequirementStatus" defaultvalue="0">
                                    @foreach (var statusItem in Model.Data.RequirementStatusList)
                                    {
                                        if (statusItem.Id == item.RequirementStatusId)
                                        {
                                            <option value="@statusItem.Id" selected>@statusItem.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@statusItem.Id">@statusItem.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td>@item.RequirementId</td>
                            <td>@item.JobCode</td>
                            <td>@item.MainSkill</td>
                            <td>@item.MandatorySkills</td>
                            <td>@item.TotalMinExperience</td>
                            <td>@item.TotalMaxExperience</td>
                            <td>@item.RelevantMinExperience</td>
                            <td>@item.RelevantMaxExperience</td>
                            <td>@item.NoOfPosition</td>
                            <td>@item.Location</td>
                            <td>@Html.Raw(item.JobDescription)</td>
                            <td>@item.EndClient</td>
                            <td>@item.Pocname</td>
                            <td>@item.ClientBillRate</td>
                            <td>@item.CandidatePayRate</td>
                            <td>@item.RequirementStatusName</td>
                            <td>@item.IsActive</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="color:red">@Model.Message</p>
        }
    </div>
</div>