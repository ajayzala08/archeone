@using ArcheOne.Models.Req;
@model UserAddEditReqViewModel;
@{
    int id = 1;
    ViewBag.datatable = "true";
    Layout = "_MasterLayout";
}
@if (id > 0)
{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Leave</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">HR</a></li>
                        <li class="breadcrumb-item active">Leave List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="card">
            <input type="hidden" id="userId" value="@Model" />
            <div class="card-header d-flex p-0">
                <h3 class="card-title p-3">Leave List</h3>

                <div class="card-tools ml-auto mr-2 p-2 justify-content-end">
                    <button type="button" id="btnShowLeave" class="btn btn-primary mr-2 float-left">
                        Show Leave Balance
                    </button>

                    <button type="button" id="btnAddLeave" class="btn btn-primary float-right">Add Leave</button>

                </div>
                @*<div class="card-tools ml-auto mr-2 p-2">
            <button type="button" id="btnAddLeave" class="btn btn-primary float-right">Add Leave</button>
            </div>*@
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @*<div class="md-12">
            </div>
            <table id="tblLeave" class="table table-bordered table-striped" style="width:100%"></table>

            <div id="AddLeaveForm">
            </div>*@

                <div id="divLeaveList"> </div>
            </div>
        </div>
        <!-- /.card-body -->
        <!-- /.card -->
    </section>


    <div class="modal fade" id="modalActionCancle">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Cancel Leave</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12" id="modelAction">
                        <input id="txtCancelLeaveId" name="txtCancelLeaveId" type="hidden" />


                        <div class="form-group col-sm-12" id="dtxtReason">
                            <label><span class="has-error required">* </span>Enter Reason</label>
                            <textarea id="txtReason" name="txtReason" class="form-control" isrequired="1" divcontainer="dtxtReason" errorspan="stxtReason" defaultvalue="0" minlength="2"></textarea>
                            <span class="help-block d-none has-error" id="stxtReason">Please Enter Reason</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="btnClose" name="btnClose" class="btn btn-danger float-right" data-dismiss="modal" value="Close" />

                    <input type="button" id="btnUpdateCancelLeave" name="btnUpdateCancelLeave" class="btn btn-warning float-right" value="Update" />
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalShowLeave">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <h4 class="modal-title font-weight-bold" style="text-decoration: underline;">Leave Balance Details</h4>
                </div>
                <div class="modal-body">
                    <h5>
                        <p class="text-center">Balance Leaves as of <label id="lblBalanceMonth" class="text-secondary"></label>'<label id="lblBalanceYear" class="text-secondary"></label> in Days,</p>
                        <ul class="nav flex-column">
                            <li class="nav-item m-2">
                                Sick Leave <span class="float-right badge bg-info" id="lblSickLeaveBalance"></span>
                            </li>
                            <li class="nav-item m-2">
                                Casual Leave <span class="float-right badge bg-info" id="lblCasualLeaveBalance"></span>
                            </li>
                            <li class="nav-item m-2">
                                Earned Leave <span class="float-right badge bg-info" id="lblEarnedLeaveBalance"></span>
                            </li>
                            <li class="nav-item m-2">
                                Closing (Total) Leave <span class="float-right badge bg-warning" id="lblClosingLeaveBalance"></span>
                            </li>
                        </ul>
                    </h5>
                </div>
                <div class="modal-footer justify-content-center">
                    <input type="button" id="btnClose" name="btnClose" class="btn btn-danger float-right" data-dismiss="modal" value="Close" />
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1 style="color:red">Page is under Progress</h1>
}

@section Scripts{
    <script src="~/archeone/js/leave/leave.js?_@DateTime.Now.Ticks"></script>
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <script src="~/theme/plugins/bootstrap/js/bootstrap.min.js"></script>
}