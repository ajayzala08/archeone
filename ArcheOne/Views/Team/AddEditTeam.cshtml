@using ArcheOne.Helper.CommonModels;
@using ArcheOne.Models.Req;
@model CommonResponse
@{
    AddEditTeamReqViewModel addEditTeamReqViewModel = Model.Data;
    Layout = "_MasterLayout";
    ViewBag.select2 = "true";
    string Title = addEditTeamReqViewModel.TeamLeadId > 0 ? "Edit Team" : "Add Team";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Masters</a></li>
                    <li class="breadcrumb-item active">@Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            @Title
            <h3 class="card-title"></h3>
        </div>
        <div class="card-body">
            @if (Model.Status)
            {
                <div class="row">
                    <input id="txtTeamId" name="txtTeamId" type="hidden" class="form-control col-sm-4" value="@addEditTeamReqViewModel.TeamId" />

                    <div class="col-sm-4" id="dddlTeamLeadId">
                        <div class="form-group">
                            <label><span class="has-error required">* </span>Team Lead</label>
                            <select id="ddlTeamLeadId" name="ddlTeamLeadId" class="form-control select2" isrequired="1" divcontainer="dddlTeamLeadId" errorspan="sddlTeamLeadId" defaultvalue="0" style="width: 100%;">
                                <option value="0" disabled>Select Team Lead</option>
                                @foreach (var item in addEditTeamReqViewModel.TeamLeadList)
                                {
                                    if (item.Id == addEditTeamReqViewModel.TeamLeadId)
                                    {
                                        <option value="@item.Id" selected>@item.FullName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.FullName</option>
                                    }
                                }
                            </select>
                            <span class="help-block d-none has-error" id="sddlTeamLeadId">Please select any Team Lead</span>
                        </div>
                    </div>

                    <div class="col-sm-4" id="dddlTeamMemberId">
                        <div class="form-group">
                            <label><span class="has-error required" typeof="checkbox">* </span>Team Member</label>
                            <select id="ddlTeamMemberId" name="ddlTeamMemberId" multiple="multiple" class="form-control select2" isrequired="1" divcontainer="dddlTeamMemberId" errorspan="sddlTeamMemberId" defaultvalue="0" style="width: 100%;">
                                <option value="0" disabled>Select Team Members</option>

                                @if (addEditTeamReqViewModel.TeamLeadId > 0)
                                {
                                    foreach (var item in addEditTeamReqViewModel.TeamMemberList)
                                    {
                                        if (addEditTeamReqViewModel.TeamMemberIds.Any(x => x == item.Id.ToString()))
                                        {
                                            <option value="@item.Id" selected>@item.FullName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.FullName</option>
                                        }
                                    }
                                }
                                else
                                {
                                    foreach (var item in addEditTeamReqViewModel.TeamMemberList)
                                    {
                                        <option value="@item.Id">@item.FullName</option>
                                    }
                                }
                            </select>
                            <span class="help-block d-none has-error" id="sddlTeamMemberId">Please select any Team Member</span>
                        </div>
                    </div>

                </div>

            }
            else
            {
                <p style="color:red;">@Model.Message</p>
            }
        </div>
        <div class="card-footer">
            @if (Title == "Edit Team")
            {
                <input type="button" id="btnSaveAdd" name="btnSubmit" class="btn btn-warning float-right ml-1" value="Update" />
            }
            else
            {
                <input type="button" id="btnSaveAdd" name="btnSubmit" class="btn btn-success float-right ml-1" value="Submit" />
            }
            <input type="button" id="btnCancel" name="btnCancel" class="btn btn-danger float-right" value="Cancel" />

        </div>
    </div>
</section>

@section Scripts {
    <script src="~/archeone/js/team/addeditteam.js"></script>
}